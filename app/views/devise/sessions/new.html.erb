<%= javascript_include_tag "registration", "data-turbo-track": "reload", defer: true, type: "module" %>

<div class="flex-grow flex flex-col items-center justify-center">  
  <div class="text-2xl font-bold"><%= t('.sign_in') %></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-[#0d0015] pl-2" %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border border-[#0d0015] pl-2" %>
    </div>

    <div class="text-blue-900 hover:underline">
      <%= link_to 'パスワードを忘れた', new_user_password_path %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    
    <div class="text-center">
      <div class="field mb-2 actions btn btn-xs bg-black text-white">
        <%= f.submit t('.sign_in') %>
      </div>
    </div>
  <% end %>

  <div class="flex mt-2 px-4 bg-[#2ca9e1] items-center justify-center text-white">
    <div id="twitter" class="mr-1"></div>
    <div>
      <%= button_to "Twitterでログイン", user_twitter_omniauth_authorize_path, data: { turbo: false } %>
    </div>
  </div>
</div>
