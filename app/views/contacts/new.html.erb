<div class="flex-grow flex flex-col items-center justify-center">
  <div class="text-2xl font-bold"><%= t('.title') %></div>
  <%= form_with(model: @contact, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="flex flex-col items-center justify-center">
      <div class="field mb-2"> 
        <div>  
          <%= f.label :name %>
        </div>
        <%= f.text_field :name, class: "border border-[#0d0015] pl-2 min-w-72" %>
      </div>
      <div class="correct-text-field">
        <div>
          <%= f.label :content %>
        </div>
        <%= f.text_area :content, class: "border border-[#0d0015] pl-2 min-h-60 min-w-72" %>
      </div>
      <div class="text-center">
        <div class="field mb-2 actions btn btn-xs bg-black text-white"> 
          <%= f.submit t('.send') %>
        </div>
      </div>
      <div>
        <%= link_to t('.back'), root_path %>
      </div>
    </div>
  <% end %>
